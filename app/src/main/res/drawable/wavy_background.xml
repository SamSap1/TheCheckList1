<!-- res/drawable/wavy_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F0E68C" /> <!-- Creamy blue color -->
        </shape>
    </item>

    <!-- Wavy pattern -->
    <item android:top="10dp">
        <bitmap
            android:tileMode="repeat"
            android:gravity="top" />
    </item>

</layer-list>
